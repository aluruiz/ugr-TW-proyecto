    <title>Pokejas!</title>
  </head>

  <body>
      <header>
        <section class="title">
          <img class="logo" src="" alt="icono"/>
          <div class="titulos">
            <h1>Pokejas! Atrapalas todas.</h1>
          </div>
        </section>
      </header>

      {% block nav %}
      <nav class="navbar">
        <a href="busqueda.php">Ver Incidencias</a>
        {% if loggedUser.rango == 'Colaborador' %}
        <a href="nuevaIncidencia.php">Nueva Incidencia</a>
        <a href="misIncidencias.php">Mis Incidencias</a>
        {% endif %}
        {% if loggedUser.rango == 'Administrador' %}
        <a href="nuevaIncidencia.php">Nueva Incidencia</a>
        <a href="misIncidencias.php">Mis Incidencias</a>
        <a href="gestionUsuarios.php">Gestion de Usuarios</a>
        <a href="log.php">Ver log</a>
        <a href="gestionBD.php">Gestion de la BBDD</a>
        {% endif %}
      </nav>
      {% endblock %}

    <div class="contenido">

      <main>
        {% block main %}
        <h1>Bienvenido al centro pokemon de quejas.</h1>
        {% endblock %}
      </main>

      <aside class="barraLateral">
        <div class="infoLateral">

        {% if loggedUser is null %}
          <section class="registrarse">
            <form class="" action="" method="post">
              <fieldset>
                <legend>Conectarse</legend>
                <label for="correo">Correo: </label>
                <input type="email" name="correo" required>
                <label for="psswrd">Contraseña :</label>
                <input type="password" name="psswrd" required>
                <a href="nuevoUsuario.php">Si no esta registrado pulse aqui.</a>
                <button type="submit">Submit</button>
              </fieldset>
            </form>
          </section>
          {% else %}
            <label>Nombre: {{ loggedUser.nombre }}</label>
            <label>{{ loggedUser.foto }}</label>
            <form action="/core/POST/postLogout.php" method="post">
            <input name="logout" type="submit" value="Logout"/>
            </form>
          {% endif %}


          <section class="tituloLateral">
            <ol>
              <li></li>
              <li></li>
              <li></li>
            </ol>
          </section>
        </div>
      </aside>
    </div>

    <footer>
      <div class="">
        <p>(C) Tecnologías Web</p>
